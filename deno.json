{
    "tasks": {
        "dev:setup": "docker-compose up -d",
        "dev:teardown": "docker-compose down",
        "pg:sh": "docker-compose exec -it postgres psql --username postgres",
        "build": "deno task --config engine/builder/deno.json start",
        "start": "deno task build && deno run --allow-env --allow-net dist/entrypoint.ts",
        "migrate": "deno task --config engine/migrate/deno.json start",
    }
}
